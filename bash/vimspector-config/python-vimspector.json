{
  "configurations": {
    "run": {
      "adapter": "debugpy",
      "default": true,
      "configuration": {
        "request": "launch",
        "python": "${workspaceRoot}/.venv/bin/python",
        "program": "${workspaceRoot}/${python_file}",
        "cwd": "${workspaceRoot}",
        "stopOnEntry": true,
        "justMyCode#json": "false"
      },
      "breakpoints": {
        "exception": {
          "raised": "N",
          "uncaught": "",
          "userUnhandled": ""
        }
      }
    }
  },
  "备注": "1. python -m venv .venv 创建环境 2. source .venv/bin/activate 切换环境 3. deactivate 切换回原始环境"
}


