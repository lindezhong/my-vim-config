{
  "configurations": {
    "run": {
      "adapter": "debugpy",
      "default": true,
      "configuration": {
        "name": "python调试程序: 使用模块",
        "request": "launch",
        "python": "${workspaceRoot}/.venv/bin/python",
        "cwd": "${workspaceRoot}",
        "type": "debugpy",
        "module": "${module}",
        "args": [],

        "justMyCode#json": "false"
      },
      "breakpoints": {
        "exception": {
          "raised": "N",
          "uncaught": "",
          "userUnhandled": ""
        }
      }
    }
  },
  "备注": "1. python -m venv .venv 创建环境 2. source .venv/bin/activate 切换环境 3. deactivate 切换回原始环境",
  "备注2": "实际执行python -m ${module} args ..."
}


