{
  "configurations": {
    "run": {
      "adapter": "debugpy",
      "default": true,
      "configuration": {
        "request": "launch",
        "python": "${workspaceRoot}/venv/bin/python",
        "program": "${workspaceRoot}/${python_file}",
        "cwd": "${workspaceRoot}",
        "stopOnEntry": true,
        "justMyCode#json": "false"
      },
      "breakpoints": {
        "exception": {
          "raised": "N",
          "uncaught": "",
          "userUnhandled": ""
        }
      }
    }
  }
}


